{
  "name": "預設莊家馬丁格爾策略",
  "description": "單一莊家投注，採用馬丁格爾遞增策略",

  "unit": 1000,
  "targets": ["banker"],
  "split_units": {
    "banker": 1
  },

  "staking": {
    "type": "martingale",
    "base_units": 1,
    "max_steps": 3,
    "reset_on_win": true,
    "progression": [1, 2, 4]
  },

  "filters": [
    {
      "name": "閒家勝出後下莊家",
      "when": "last_winner == 'P'",
      "override_targets": ["banker"],
      "override_units": {"banker": 1}
    }
  ],

  "limits": {
    "per_round_cap": 10000,
    "session_stop_loss": -20000,
    "session_take_profit": 30000,
    "max_retries": 1,
    "max_consecutive_losses": 5
  },

  "conditions": {
    "min_balance": 50000,
    "skip_if_streak_gt": 8,
    "pause_on_environment_change": true
  }
}